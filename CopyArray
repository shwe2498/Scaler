/*
 Copy the Array
 You are given a constant array A and an integer B.
 You are required to return another array where outArr[i] = A[i] + B.
 
 Input 1: A = [1,2,3,2,1] B = 3 Output 1: [4,5,6,5,4]
 Input 2: A = [1,1,10] B = 6 Output 2: [7,7,16]
 */

#include <iostream>
#include <vector>

using namespace std;

vector<int> solve(const vector<int> &A, int B) {
    vector<int> out(A.size());
    for(int i = 0; i < A.size(); i++){
        out[i] = A[i] + B;
    }
    return out;
}
